
public class DigitSum {
	public static void main(String[] args) {
		System.out.println("The sum of the digits is: " + sumDigits(33));
	}
	
	public static int sumDigits(int number) {
		
		int sum = 0;
		
		if(number < 10) {
			
			while(number >= 10) {
				sum += number % 10;
				number /= 10;
			}
			return sum;
		}
		return -1;
	}

}
