
public class NumberPalindrome {
	public static void main(String[] args) {
		isPalindrome(212);
	}
	
	public static boolean isPalindrome(int number) {
		
		int reverse = 0;
		
		if(number == reverse) {
			
			while(number > 0) {
				int lastDigit = number % 10;
				reverse = reverse * 10;
				reverse = reverse + lastDigit;
				number = number / 10;
			}
			return true;
			
		}
		return false;
	}
}
