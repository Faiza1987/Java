
public class NumberPalindrome {
	public static void main(String[] args) {
		System.out.println("This number is a palindrome " + isPalindrome(212));
	}
	
	public static boolean isPalindrome(int number) {
		
		int reverse = 0;
		
		while(number != 0) {	
			int lastDigit = number % 10;
			reverse *= 10;
			reverse += lastDigit;
			lastDigit /= 10;

			if(number == reverse) {
				return true;
			}
		}
		
		return false;
	}
}
